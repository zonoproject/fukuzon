<div class="container  d-flex justify-content-center mt-3">
  <div class="w-100">
    <h1>お気に入り</h1>

    <hr>

    <div class="row">
      <% @favorites.each do |favorite| %>
        <div class="col-md-8 mt-2">
          <div class="d-inline-flex">
            <%= link_to product_path(favorite), class: "w-25" do %>
              <% if favorite.image.attached? %>
                <%= image_tag favorite.image, class: "img-fuild w-100" %>
              <% else %>
                <%= image_tag "/images/dummy.png", class: "img-fuild w-100" %>
              <% end %>
            <% end %>
            <div class="container mt-3">
              <h5 class="w-100 shopruby-favorite-item-text"><%= favorite.name %></h5>
              <h6 class="w-100shopruby-favorite-item-text">￥<%= favorite.price %></h6>
            </div>
          </div>
        </div>
        <div class="col-md-2 d-flex align-items-center">
          <%= link_to product_path(favorite), class: "shopruby-favorite-item-delete" do %>
            削除
          <% end %>
        </div>
        <div class="col-md-2 d-flex align-items-center justify-content-end">
          <%= form_with url: cart_create_users_path, local: true do |f| %>
            <%= f.hidden_field :product_id, value: favorite.id %>
            <%= f.hidden_field :price, value: favorite.price %>
            <%= f.hidden_field :quantity, value: 1 %>
            <%= f.submit "カートに入れる", class: "btn shopruby-favorite-add-cart text-white w-100" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <hr>

  </div>
</div>
