<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="mt-3 mb-3">パスワード再設定</h3>

      <hr>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group">

          <%= f.hidden_field :reset_password_token %>
          <%=
            f.password_field :password,
            class: "form-control #{"is-invalid" if resource.errors.messages[:password].present? } shopruby-login-input",
            autofocus: "true",
            autocomplete: "new-password",
            placeholder: "新しいパスワード"
          %>
          <% if resource.errors.messages[:email].present? %>
          <span class="shopruby-error-message">
            <strong><%= resource.errors.full_messages_for(:email).first %></strong>
          </span>
          <% end %>
        </div>

        <div class="form-group">
            <%=
              f.password_field :password_confirmation,
              class: "form-control shopruby-login-input",
              autocomplete: "new-password",
              placeholder: "新しいパスワード（確認用）"
            %>
        </div>

        <div class="form-group">
          <%=  f.submit "パスワードリセット", class: "mt-3 btn shopruby-submit-button w-100" %>
        </div>
    </div>
  </div>
</div>